<h1>Edit task</h1>

<%= form_for @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>

    <%= f.check_box :completed %>
    <%= f.label :completed %>


  <%= f.submit class: 'btn btn-primary' %>
<% end %>